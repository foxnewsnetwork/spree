- if @user == current_user
  = content_for :sidebar do
    %nav.user-command-panel
      %h6= Spree.t(:your_command_panel)
      %ul
        %li= link_to Spree.t(:preferences), user_preferences_path(current_user)
        %li= link_to Spree.t(:your_shops), shop_path(current_shop)

.user-show
  - @body_id = "user-details"
  .columns.ten.omega
    .row
      = render 'summary', user: @user
    .row
      = render 'spree/users/summaries/shops', user: @user
    .row
      = render 'spree/users/summaries/preferences', user: @user