- back ||= {}
= form_for :user, url: user_session_path do |f|
  %fieldset
    %legend= Spree.t(:login)
    = f.hidden_field :back, value: back[:back]
    %dl
      %dt= f.label :email
      %dd= f.email_field :email
      %dt= f.label :password
      %dd= f.password_field :password
      %dt= Spree.t(:options)
      %dd
        = f.check_box :remember_me 
        = f.label :remember_me
    .form-action
      = f.submit Spree.t(:login)
